<body id="page-top">

    <!-- Page Wrapper -->
    <%- include('partial/layoutAdmin'); %>
        <!-- ==================================================================== -->
        <h1 style="text-align: center;">Danh sách user account</h1>
        <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#exampleModal1"
            data-bs-whatever="@mdo">Thêm sản
            phẩm</button>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/update" method="post">
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Tên :</label>
                                <input type="text" class="form-control" name="Tensp" id="Tensp">
                            </div>
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Giá:</label>
                                <input type="text" class="form-control" name="Giasp" id="Giasp">
                            </div>
                            <div class="mb-3">
                                <label for="recipient-name" class="col-form-label">Ảnh:</label>
                                <input type="text" class="form-control" name="Anhsp" id="Anhsp">
                            </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                        <input name="id" id="idd" type="text" value="" hidden />
                        <button class="btn btn-danger" style="display: inline-block;">Update sản
                            phẩm</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
        <button onclick="myFunction()">Click me</button>
        <table id="example" class="table table-striped container ">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Email</th>
                    <th scope="col">Username</th>
                    <th scope="col">Password</th>
                    <th scope="col">Thao tác</th>
                </tr>
            </thead>
            <tbody id="body_table">

            </tbody>
        </table>

        <!-- ====================================================================== -->
        <%- include('partial/layoutAdmin2'); %>
            <script>
                $(document).ready(function () {
                    $('#example').DataTable();
                });
            </script>
            <script>
                async function myFunction() {
                    let temp = "";
                    await fetch("/getListUser")
                        .then(response => response.json())
                        .then(data => {
                            console.log(data.message)
                            console.log(data.message.length)
                            // $('#Tensp').val(data.product.name);
                            if (data.message.length > 0) {
                                data.message.forEach((itemData) => {
                                    temp += "<tr>";
                                    temp += "<th  scope=`row`>" + itemData._id + "</th>";
                                    temp += "<td>" + itemData.email + "</td>";
                                    temp += "<td>" + itemData.userName + "</td>";
                                    temp += "<td>" + itemData.password + "</td>";
                                    temp += "<td>" + `<button type="button" data-id="" class="btn btn-info editt"
                                data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="myFunction(this)"
                                data-bs-whatever="@mdo">Sửa sản phẩm</button>` + "</td>";
                                    temp += "</tr>";
                                    console.log(itemData._id)
                                });
                            }
                        })
                        .catch(error => console.log(error));
                    console.log("========1======")
                    document.getElementById('body_table').innerHTML = temp;
                }
                myFunction()
            </script>


            <link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/jquery.dataTables.min.css">
            <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
            <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
            <!-- ====================================================================== -->

</body>


</html>